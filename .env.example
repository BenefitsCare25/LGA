# Apollo.io Scraping (via Apify)
APIFY_API_TOKEN=your_apify_api_token_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Microsoft Azure Configuration (for email automation)
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# GitHub OAuth Configuration (for GitHub device login)
GITHUB_CLIENT_ID=your_github_oauth_app_client_id

# Unsubscribe Token Configuration (for email campaigns)
# LEGACY: Old AES-256-GCM encryption method (kept for backwards compatibility)
# Generate a secure 64-character hex string using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
UNSUBSCRIBE_SECRET_KEY=your_64_character_hex_string_here

# JWT Secret for Unsubscribe Tokens (NEW - recommended)
# Generate a secure random string using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# This secret is used to sign JWT tokens for unsubscribe links
# JWT tokens are:
#   - URL-safe (base64url encoding, no special characters)
#   - Resilient to email gateway rewriting (Proofpoint, Mimecast, Safe Links)
#   - Self-expiring (30-day default expiration)
#   - Stateless (no database storage required)
# IMPORTANT: Never change this key after deployment - it will invalidate all existing unsubscribe links
JWT_SECRET=your_128_character_hex_string_here

# Deployment Configuration
RENDER_EXTERNAL_URL=https://your-render-app.onrender.com

# Development Configuration
NODE_ENV=development
PORT=3000